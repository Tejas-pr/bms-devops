{
  "name": "@repo/database",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "prebuild": "dotenv -e ../../.env -- prisma generate",
    "build": "dotenv -e ../../.env -- tsc",
    "dev": "dotenv -e ../../.env -- tsc --watch",
    "db:generate": "dotenv -e ../../.env -- prisma generate",
    "db:migrate": "dotenv -e ../../.env -- prisma migrate dev --skip-generate",
    "db:deploy": "dotenv -e ../../.env -- prisma migrate deploy"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@prisma/extension-accelerate": "^2.0.2",
    "@repo/typescript-config": "workspace:*",
    "prisma": "^6.16.2"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  }
}
